@page
@model ParsianNews.Pages.Admin.Image.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image[0].Gallery)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Image) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gallery.Description)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ImageId" class="fa fa-edit" style="color:darkorange; font-size:15px;" title="ویرایش"></a> |
                    <a asp-page="./Details" asp-route-id="@item.ImageId" class="fa fa-info-circle" style="color:darkblue; font-size:15px;" title="جزییات"></a> |
                    <a asp-page="./Delete" asp-route-id="@item.ImageId" class="fa fa-trash" style="color:red; font-size:15px;" title="حذف"></a>
            </td>
        </tr>
}
    </tbody>
</table>
