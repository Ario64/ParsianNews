@page
@model ParsianNews.Pages.Admin.Report.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "لیست اخبار";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-page="CreateReport">ایجاد خبر جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportView)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].IsHotNews)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report[0].ReportGroup)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Report)
        {
            <tr>
                <td>
                    <img src="/ReportImages/@Html.DisplayFor(modelItem => item.ReportImage)" style="max-width:120px" class="thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportView)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHotNews)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReportGroup!.GroupName)
                </td>
                <td>
                    <a asp-page="./DeleteReport" asp-route-id="@item.ReportId" class="fa fa-trash" style="color:red; font-size:15px;" title="حذف"></a> |
                    <a asp-page="./EditReport" asp-route-id="@item.ReportId" class="fa fa-edit" style="color:darkorange; font-size:15px;" title="ویرایش"></a> |
                    <a asp-page="./Details" asp-route-id="@item.ReportId" class="fa fa-info-circle" style="color:darkblue; font-size:15px;" title="جزییات"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
