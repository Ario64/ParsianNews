@page
@model ParsianNews.Pages.Admin.Gallery.IndexModel

@{
    ViewData["Title"] = "گالری ها";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    <a asp-page="CreateGallery" class="btn btn-sm btn-success">افزودن گالری جدید</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gallery[0].GalleryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gallery[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Gallery)
        {
            <tr>
                <td>
                    <a asp-page="../Image/Index" asp-route-galleryName="@item.GalleryName" asp-page-handler="Gallery">@Html.DisplayFor(modelItem => item.GalleryName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./EditGallery" asp-route-id="@item.GalleryId" class="fa fa-edit" style="color:darkorange; font-size:15px;" title="ویرایش"></a> |
                    <a asp-page="./GalleryDetails" asp-route-id="@item.GalleryId" class="fa fa-info-circle" style="color:darkblue; font-size:15px;" title="جزییات"></a> |
                    <a asp-page="./DeleteGallery" asp-route-id="@item.GalleryId" class="fa fa-trash" style="color:red; font-size:15px;" title="حذف"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
