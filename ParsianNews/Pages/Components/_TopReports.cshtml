@model IEnumerable<ParsianNews.Models.Report>

<link href="~/assets/css/topreportsstyle.css" rel="stylesheet" />

<div class="box">
    <h6 class="position-relative ">
        <span class="TopReports-Line-Color position-relative bg-body"> محبوب ترین اخبار </span>
    </h6>
</div>

<div class="TopReports-row">
    @foreach (var report in Model)
    {
        <div class="TopReports-col-1-of-3">
            <div class="TopReports-card">
                <div class="TopReports-card__side TopReports-card__side--front-1">
                    <img src="/ReportImages/@report.ReportImage" class="w-100 h-100"/>
                </div>
                <div class="TopReports-card__side TopReports-card__side--back TopReports-card__side--back-1">
                    <div class="TopReports-card__side__back-1__body">
                        <p class="TopReports-card__price-only">
                            @report.Title
                        </p>
                        <a class="TopReports-card__side__back-1__btn btn btn-secondary"> مشاهده خبر </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
