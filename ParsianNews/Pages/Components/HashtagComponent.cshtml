@model IEnumerable<ParsianNews.Models.Hashtag>

<div class="row m-0 my-4 Hashtag">
    <ul class="bg-body-tertiary shadow py-3 ">
        <li class="btn btn-info btn-sm mb-1 px-1 py-0"> <i class="fa fa-hashtag">#</i></li>
        @foreach (var hashtag in Model)
        {
            <li class="btn btn-info btn-sm mb-1 px-1 py-0"> <span> # </span> <a class="text-decoration-none"> @hashtag.HashtagName </a> </li>
        }
    </ul>
</div>

