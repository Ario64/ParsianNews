@using ParsianNews.Utilities
@model IEnumerable<ParsianNews.Models.Report>

<div class="col-lg-6 col-sm-12">
    <ul class="HotNews ps-0">
        @foreach (var report in Model)
        {
            <li class="border-bottom py-2">
                <a asp-page="./Report" asp-route-id="@report.ReportId" class="list-unstyled text-decoration-none">
                    @report.Title
                    <i class="@((report.ReportGroup!.GroupName == ReportGroup.MultiMedia)?"fa fa-film":"")">
                    </i>
                </a>
            </li>
        }
    </ul>
</div>
