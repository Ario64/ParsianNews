@using ParsianNews.Utilities
@model IEnumerable<ParsianNews.Models.Report>

<div class="tab-pane fade show active" id="Social-tab-pane" role="tabpanel" aria-labelledby="Social-tab" tabindex="0">
    <div class="my-2 body-text-NavTab">
        <a class="text-decoration-none text-NavTab"> <i class="fas fa-bars ms-3"></i> همه اخبار </a>
    </div>
    <div class="card-group mb-4 list-group-unbordered">
        @foreach (var report in Model)
        {
            <div class="card p-2  border-secondary">
                <a><img src="/ReportImages/@report.ReportImage" class="card-img-top body-img-NavTab" title=" @report.ImageTitle" alt="@report.ReportImageAlt"></a>
                <div class="card-body">
                    <a class="text-decoration-none">
                        <p class="card-title text-black body-card-NavTab"> @report.Title </p></a>
                    <p class="card-text" style="margin-bottom: 2rem;">
                       @report.Description
                    </p>
                    <p class="card-text" style="position:absolute; bottom:20px;"><small class="text-body-secondary"><i class="fas fa-clock"></i>@report.CreateDate.ToShamsi()</small></p>
                </div>
            </div>
        }
    </div>
</div>